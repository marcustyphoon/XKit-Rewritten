{
  "title": "Tweaks",
  "description": "Miscellaneous dashboard options",
  "icon": {
    "class_name": "ri-settings-5-line",
    "color": "white",
    "background_color": "#ecc84b"
  },
  "preferences": {
    "slim_filtered_screens": {
      "type": "checkbox",
      "label": "Use a slim layout for filtered posts",
      "default": false
    },
    "highlight_contributed_content": {
      "type": "checkbox",
      "label": "Highlight contributed content on reblogs",
      "default": false
    },
    "subtle_follow": {
      "type": "checkbox",
      "label": "Make posts' mini-follow buttons more subtle",
      "default": false
    },
    "no_focus_shadow": {
      "type": "checkbox",
      "label": "Remove the coloured shadow from focused posts",
      "default": false
    },
    "unsticky_post_avatars": {
      "type": "checkbox",
      "label": "Remove sticky effect from post avatars",
      "default": false
    },
    "hide_filtered_posts": {
      "type": "checkbox",
      "label": "Hide filtered posts entirely",
      "default": false
    },
    "hide_my_posts": {
      "type": "checkbox",
      "label": "Hide my own posts on the dashboard",
      "default": false
    },
    "hide_follower_counts": {
      "type": "checkbox",
      "label": "Hide my follower count where possible",
      "default": false
    },
    "no_where_were_we": {
      "type": "checkbox",
      "label": "Hide the \"Now, where were we?\" button",
      "default": false
    },
    "show_all_tags": {
      "type": "checkbox",
      "label": "Show every line of tags by default",
      "default": false
    },
    "hide_notification_home": {
      "type": "checkbox",
      "label": "Hide the home notification badge",
      "default": false
    },
    "hide_notification_messaging": {
      "type": "checkbox",
      "label": "Hide the messaging notification badge",
      "default": false
    },
    "hide_notification_activity": {
      "type": "checkbox",
      "label": "Hide the activity notification badge",
      "default": false
    },
    "hide_notification_account": {
      "type": "checkbox",
      "label": "Hide the account notification badge",
      "default": false
    },
    "hide_share": {
      "type": "checkbox",
      "label": "Hide the share button on posts",
      "default": false
    },
    "hide_notes": {
      "type": "checkbox",
      "label": "Hide the notes on posts",
      "default": false
    },
    "hide_follower_count": {
      "type": "checkbox",
      "label": "Hide your follower count",
      "default": false
    }
  }
}
